import streamlit as st

# Page setup
st.set_page_config(page_title="SearchP", page_icon="ðŸ”Ž", layout="centered")

# Auth gate: only allow if signed in
if "user" not in st.session_state:
    st.error("Please sign in with your @sdsu.edu account to continue.")
    st.stop()

# Header
st.markdown(
    """
    <div style="display:flex; flex-direction:column; align-items:center; margin-top:-10px;">
        <h1 style="margin:0; font-family:sans-serif;">Search a Subject</h1>
    </div>
    """,
    unsafe_allow_html=True
)

# Topics
topics = ["Dungeons & Dragons", "CS Study Sesh", "LOCKIN IN ON EXAMS", "Math Club", "Clash Royale"]
topics = sorted(topics, key=str.casefold)

# Searchable dropdown
choice = st.selectbox(
    "Choose a topic (type to filter):",
    options=topics,
    index=None,
    placeholder="Search"
)

# Create event button (enabled only when a topic is selected)
disabled = choice is None
if st.button("Create an Event!", use_container_width=True, disabled=disabled):
    st.success(f"Event created for: {choice}")

# Show current selection
if choice:
    st.info(f"Selected: {choice}")
